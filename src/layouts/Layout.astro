---
export interface Props {
  title: string;
  lang: string;
}
const { title, lang } = Astro.props;

//Global Css Imports
import '../styles/styles.css';

//Component Import
import Nav from '../components/nav/Nav.jsx';
import Footer from '../components/Footer.astro';
import Loader from '../components/Loader.astro';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- Meta Data -->
    <meta
      name="description"
      content="Somos un grupo de diseñadores, publiistas digitales y desarrolladores que buscan ofrecer soluciones creativas y de calidad que se adapten a los requerimientos de cada cliente."
    />
    <meta
      name="keywords"
      content="digital, marketing, seo,sem,advertising, agency,growth,branding, performance,programmatic, development, coding,community,managment,crecé,más,social network, redes sociales, publicidad, agencia, crecimiento, marcas"
    />
    <meta property="og:site_name" content="Crecé Más - Marketing Digital " />
    <meta property="og:title" content="Crecé Más - Marketing Digital " />
    <meta
      property="og:description"
      content="Somos un grupo de diseñadores, publiistas digitales y desarrolladores que buscan ofrecer soluciones creativas y de calidad que se adapten a los requerimientos de cada cliente."
    />
    <meta
      property="og:image"
      content="https://crece-mas.netlify.app/imgs/logo.png"
    />

    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>{title}</title>
  </head>
  <body class="font-franklin">
    <Loader />
    <Nav client:load lang={lang} />
    <slot />
    <Footer lang={lang} />
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
