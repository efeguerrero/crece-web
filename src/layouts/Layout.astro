---
export interface Props {
  title: string;
  lang: string;
}
const { title, lang } = Astro.props;

//Global Css Imports
import '../styles/styles.css';

//Component Import
import Nav from '../components/nav/Nav.jsx';
import Footer from '../components/Footer.astro';
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <!-- Meta Data -->
    <meta
      name="description"
      content="We are a group of designers, digital marketers and developers with the desire to offer creative and quality solutions which can be adapted to the requirements of each customer."
    />
    <meta
      name="keywords"
      content="digital, marketing, seo,sem,advertising, agency,growth,branding, performance,programmatic, development, coding,community,managment,crecé,más"
    />
    <meta property="og:site_name" content="Crecé Más - Digital Marketing" />
    <meta property="og:title" content="Crecé Más - Digital Marketing" />
    <meta
      property="og:description"
      content="We are a group of designers, digital marketers and developers with the desire to offer creative and quality solutions which can be adapted to the requirements of each customer."
    />
    <meta
      property="og:image"
      content="https://crece-mas.netlify.app/imgs/logo.png"
    />

    <!-- Font Import -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <!-- <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    /> -->
    <!-- Font Import -->
    <title>{title}</title>
  </head>
  <body class="font-franklin">
    <Nav client:load lang={lang} />
    <slot />
    <Footer />
  </body>
</html>
