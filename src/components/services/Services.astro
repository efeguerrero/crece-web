---
interface Props {
  lang: string;
}
const { lang } = Astro.props;

//data import
import data from './data.json';

//Comopent import
import Icons from '../utils/Icons.astro';
---

<section id="services" class="scroll-m-20 bg-gray py-12">
  <div class="mx-auto max-w-7xl px-4 py-8 sm:py-16 md:px-8">
    <div class="mb-8 max-w-screen-md lg:mb-16">
      <h2 class="mb-4 text-4xl font-extrabold tracking-tight text-alpha">
        {data[lang].title}
      </h2>
      <p class="text-alpha sm:text-xl">
        {data[lang].text}
      </p>
    </div>
    <div
      class="space-y-10 md:grid md:grid-cols-2 md:gap-12 md:space-y-0 lg:grid-cols-4"
    >
      {
        data[lang].services.map((item) => (
          <div>
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-alphaLight/30  text-alpha lg:h-12 lg:w-12">
              <Icons icon={item.icon} folder="features" />
            </div>
            <h3 class="mb-4 text-2xl font-bold text-alpha">{item.title}</h3>

            <dl class="flex w-full flex-col justify-start gap-2 lg:gap-4">
              {item.features.map((feature) => (
                <div class="flex items-start justify-start gap-2 text-white">
                  <dt class="mt-[0.25rem] flex h-[1rem] w-[1rem] items-center justify-center rounded-full bg-alphaLight">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                    >
                      <path
                        fill="currentColor"
                        d="M18.7 7.2c-.4-.4-1-.4-1.4 0l-7.5 7.5l-3.1-3.1c-.4-.4-1-.4-1.4 0c-.4.4-.4 1 0 1.4l3.8 3.8c.2.2.4.3.7.3c.3 0 .5-.1.7-.3l8.2-8.2c.4-.4.4-1 0-1.4z"
                      />
                    </svg>
                  </dt>
                  <dd class="w-full text-base text-alpha">{feature}</dd>
                </div>
              ))}
            </dl>
          </div>
        ))
      }
    </div>
  </div>
</section>
