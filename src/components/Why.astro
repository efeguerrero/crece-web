                      <h3 class="mt-2 text-center text-3xl font-bold leading-6 text-bravo lg:mt-4">
                        {item.name}
                      </h3>
                      <p class="text-gray-500 mx-auto mt-4 w-2/3 text-center text-base lg:w-[80%]">
                        {item.text}
                      </p>
                    </div>
