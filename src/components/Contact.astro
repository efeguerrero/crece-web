---
interface Props {
  lang: string;
}
const { lang } = Astro.props;
---

<section
  id="contact"
  class="scroll-m-20 bg-gradient-to-br from-alpha from-60% to-alphaDark lg:min-h-[svh] lg:pb-12"
>
  <div
    class="l mx-auto flex max-w-7xl flex-col px-4 py-12 md:px-8 lg:min-h-[svh] lg:py-12"
  >
    <div class="flex-1 lg:-mx-6 lg:flex lg:items-center lg:justify-center">
      <div class="text-white lg:mx-6">
        <h1 class="text-4xl font-extrabold capitalize lg:text-5xl">
          {lang === 'en' ? 'Contact Us!' : '¡Contactanos!'}
