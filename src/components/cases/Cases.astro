---
import { contentfulClient } from '../../lib/contentful';
import type { Case } from '../../lib/contentful';
import CaseList from './CaseList';

//Cases Imports
const cases = await contentfulClient.getEntries<Case>({
  content_type: 'caso',
});
---

<section class="pt-40">
  <div class="mx-auto max-w-7xl px-6 lg:px-6">
    <h5 class="text-sm uppercase">our projects</h5>
    <h2 class="my-2 text-left text-6xl font-extrabold text-alpha">
      Take a look at our work
    </h2>
    <h6 class="my-2 text-xl text-alpha">
      Got something on your mind? <a
        class="text-alpha underline underline-offset-4 transition-all lg:hover:text-bravo"
        href="/#contact">Contact us!</a
      >
    </h6>
    <div class="mx-auto py-16">
      <CaseList client:idle cases={cases} show="all" />
    </div>
  </div>
</section>
