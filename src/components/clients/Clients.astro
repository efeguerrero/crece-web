---
interface Props {
  lang: string;
}
const { lang } = Astro.props;

// const partnerImgs = await Astro.glob('./partnersImgs/*.png').then((imgs) => {
//   return imgs.map((img) => img.default);
// });

const clientsImgs = await Astro.glob('./clientsImgs/*.png').then((imgs) => {
  return imgs.map((img) => img.default);
});
---

<section id="clients" class="scroll-m-20 bg-white py-24 sm:pb-24 sm:pt-32">
  <div class="mx-auto max-w-7xl px-4 md:px-8">
    <h2
      class="mb-20 text-left text-5xl font-extrabold tracking-tight text-bravo md:mb-14 md:text-5xl lg:mb-16"
    >
      {
        lang === 'en'
          ? 'Meet our most loved clients'
          : 'Nuestros principales clientes '
      }
    </h2>
    <div
      class="relative mx-auto flex flex-wrap justify-between gap-x-4 gap-y-6 p-8 before:absolute before:right-0 before:top-0 before:h-[10rem] before:w-[10rem] before:border-r-[3px] before:border-t-[3px] before:border-bravo before:bg-transparent after:absolute after:bottom-0 after:left-0 after:h-[10rem] after:w-[10rem] after:border-b-[3px] after:border-l-[3px] after:border-bravo after:bg-transparent md:justify-center md:gap-y-6 lg:w-[80vw] lg:gap-x-0 xl:w-[60vw]"
    >
      {
        clientsImgs.map((img) => (
          <div class="flex h-24 flex-[0_1_40%] justify-center rounded-lg lg:flex-[0_0_30%]  ">
            <img
              class=" max-w-20 max-h-20 object-contain"
              src={img}
              alt="Client Logo"
              width="158"
              height="48"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
